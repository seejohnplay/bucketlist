<%= form_for @list, :html => { :class => 'form-horizontal' } do |f| %>
	<fieldset>
		<% if @list.errors.any? %>
			<div class='alert alert-error'>
				<%= @list.errors.full_messages.join("<br>").html_safe %>
			</div>
		<% end %>
		<legend>Create a new list</legend>
		<div class="control-group">
			<%= f.label :title, "Title:", :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :title, :placeholder => "Title", :class => 'text_field' %>
			</div>
		</div>
		<br>
		<div class="form-actions">
			<%= f.submit "Submit List!", :class => 'btn btn-primary' %>
			<%= link_to 'Cancel', lists_path, :class => 'btn' %>
		</div>
	</fieldset>
<% end %>